{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "dom",
            "es6"
        ],
        "types": [
            "jasmine",
            "node"
        ]
    },
    "compileOnSave": false,
    "exclude": [
      "node_modules",
      "dist"
    ]
}
